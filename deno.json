{
  "version": "0.1.0",
  "nodeModulesDir": "auto",
  "workspace": {
    "members": [
      "packages/*"
    ]
  },
  "tasks": {
    "dev": "deno task dev:config & deno task dev:supervisor & deno task dev:server",
    "dev:config": "cd packages/config && deno task dev",
    "dev:supervisor": "cd packages/supervisor-graph && deno task dev",
    "dev:server": "cd packages/mcp-server && deno task dev",
    "test": "deno task test --allow-net --allow-read --allow-env --allow-write",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check packages/*/src/**/*.ts",
    "install": "deno install",
    "deps:check": "deno outdated",
    "deps:update-latest": "deno outdated --update --latest && deno task check",
    "inspector": "DANGEROUSLY_OMIT_AUTH=true npx @modelcontextprotocol/inspector"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
